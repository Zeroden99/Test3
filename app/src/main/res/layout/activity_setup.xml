<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context="SetupActivity">

    <ImageView

        android:id="@+id/setup_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="110dp"

        android:layout_marginTop="42dp"
        android:src="@drawable/profile"/>

    <EditText
        android:id="@+id/setup_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="289dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/username"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Username"
        android:inputType="text"
        android:padding="12dp"
        android:textColorHint="#F80202" />

    <EditText
        android:id="@+id/setup_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="349dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="FullName"
        android:inputType="text"
        android:background="@drawable/inputs"
        android:padding="12dp"
        android:drawableLeft="@drawable/name"
        android:textColorHint="#F80202" />

    <EditText
        android:id="@+id/setup_years"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="407dp"
        android:layout_marginRight="10dp"
        android:autoText="false"
        android:background="@drawable/inputs"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Years"
        android:inputType="number"
        android:padding="12dp"
        android:textColor="#F2000000"
        android:textColorHint="#F80202" />

    <EditText
        android:id="@+id/setup_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="465dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Phone Number"
        android:inputType="phone"
        android:padding="12dp"
        android:textColorHint="#F80202" />

    <Button
        android:id="@+id/setup_information_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="561dp"
        android:background="@drawable/button"
        android:padding="14dp"
        android:text="Save"
        android:textColor="#F8F8F8"
        android:textSize="16sp" />



</RelativeLayout>